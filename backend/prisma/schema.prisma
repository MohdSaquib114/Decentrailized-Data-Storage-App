generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String  @id @default(uuid())
  wallet    String  @unique // Ethereum public key (wallet address)
  nonce     String  @default("random") // Used for authentication
  createdAt DateTime @default(now())
}
